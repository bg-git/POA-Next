{
  "name": "poa-monorepo",
  "version": "1.0.0",
  "description": "Pierce of Art monorepo - Storefront + Booking System",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace poa-storefront run dev",
    "build": "yarn workspaces foreach -pit run build",
    "start": "yarn workspace poa-storefront run start",
    "lint": "yarn workspaces foreach -pit run lint",
    "type-check": "yarn workspaces foreach -pit run type-check",
    "storefront": "yarn workspace poa-storefront",
    "booking": "yarn workspace poa-booking"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
